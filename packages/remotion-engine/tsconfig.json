{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.tsx", "components/Captions.jsx"],
  "exclude": ["node_modules"]
}